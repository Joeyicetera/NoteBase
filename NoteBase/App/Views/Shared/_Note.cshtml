@model NoteModel

@{
    <div class="note shadow-lg p-3 mb-5 rounded">
        <a asp-controller="Note" asp-action="Details" asp-route-Id="@Model.ID"><h1>@Model.Title</h1>
        <p>@Model.Text</p>
        <br>
        </a>
        @if (Model.TagList.Count() > 0)
        {
            <p>
                @for (int i = 0; i < Model.TagList.Count() - 1; i++)
                {
                    <a asp-controller="Tag" asp-action="Index" asp-route-Id="@Model.TagList[i].ID"><span>@Model.TagList[i].Title ,</span></a>
                }
                <a asp-controller="Tag" asp-action="Index" asp-route-Id="@Model.TagList.Last().ID"><span>@Model.TagList.Last().Title</span></a>
            </p>
        }
    </div>
}
