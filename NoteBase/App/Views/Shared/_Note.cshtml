@model NoteModel

@{
    <div class="note shadow-lg p-3 mb-5 rounded">
        <a asp-controller="Note" asp-action="Details" asp-route-Id="@Model.ID"><h1>@Model.Title</h1></a>
        <p>@Model.Text</p>
        <br>
        @if (Model.TagList.Count() > 0)
        {
            <p>
                @for (int i = 0; i < Model.TagList.Count() - 1; i++)
                {
                    <span>@Model.TagList[i].Title ,</span>
                }
                <span>@Model.TagList.Last().Title</span>
            </p>
        }
    </div>
}
