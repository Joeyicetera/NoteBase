@model NoteModel

<div>
    @if (!ViewBag.Succeeded)
    {
        <p>Er is iets mis gegaan.</p>
    }
    else {
        <h1>@Model.Title</h1>
        <!--<h2>Category</h2>-->
        <a asp-controller="Note" asp-action="Edit" asp-route-Id="@Model.ID">Bewerken</a>
        <a asp-controller="Note" asp-action="Delete" asp-route-Id="@Model.ID">Verwijderen</a>
        <hr />
        <p>@Model.Text</p>
        @if (Model.TagList.Count() > 0)
        {
            <p>
                @for (int i = 0; i < Model.TagList.Count() - 1; i++)
                {
                    <a asp-controller="Tag" asp-action="Index" asp-route-Id="@Model.TagList[i].ID"><span>@Model.TagList[i].Title ,</span></a>
                }
                <a asp-controller="Tag" asp-action="Index" asp-route-Id="@Model.TagList.Last().ID"><span>@Model.TagList.Last().Title</span></a>
            </p>
        }
    }
</div>
<div>
    <a asp-controller="Home" asp-action="Index">Terug naar overzicht</a>
</div>
